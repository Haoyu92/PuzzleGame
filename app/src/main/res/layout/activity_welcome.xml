<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <RelativeLayout
        android:id="@+id/task"
        android:layout_width="500dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/category1"
            android:layout_width="153dp"
            android:layout_height="180dp"
            android:background="@drawable/button_category"
            app:srcCompat="@drawable/easy" />

        <ImageButton
            android:id="@+id/category2"
            android:layout_width="153dp"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/category1"
            android:background="@drawable/button_category"
            app:srcCompat="@drawable/medium" />

        <ImageButton
            android:id="@+id/category3"
            android:layout_width="153dp"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/category2"
            android:background="@drawable/button_category"
            app:srcCompat="@drawable/hard" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/achievement"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/task"
        android:layout_below="@id/task"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Score"
        android:textColor="#fff" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignRight="@id/task"
        android:layout_below="@id/task"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Gallery"
        android:textColor="#fff" />

</RelativeLayout>
